@model List<Employee>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee List</title>
</head>
<body>
    <div>
        <h2>Employee List</h2>

        <div class="mb-3">
            <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">Add Employee</a>
        </div>

        <table class="table-action td-spacing mt-15" cellspacing="00" cellpadding="00" border="0" align="center"
               width="98%">
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Hire Date</th>
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Emp_Id</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Department</td>
                    <td>@employee.HireDate.ToShortDateString()</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = @employee.Emp_Id }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = @employee.Emp_Id }, new { @class = "btn btn-danger btn-sm delete-button" })
                    </td>
                </tr>
            }
        </table>
    </div>
    
</body>
</html>
